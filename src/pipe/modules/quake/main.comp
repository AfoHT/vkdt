      w = normalize(0.45*f + r*uv.x + t*uv.y);
      m0.n = f;
      pdf_w = 1.0; // whatever we will not be light tracing here
      W = 0.0; // not resampled
    }
    for(int b=0;b<2;b++) // bounces
    {
      rayQueryEXT rq;
