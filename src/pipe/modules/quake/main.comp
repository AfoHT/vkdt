              res.w_sum = f;
              res.y = m1.x;
              res.M++;
              res.kappa = 50.0; // XXX???
            }
            if(W==0.0) ind = res;
          }
          if(b == 0) // on 2nd vertex
          { // directly visible light source
            irr += 0.01; // but be sure that albedo * irradiance stays put.
            alb += 100 * m1.emission;
          }
          break; // no indirect light on emitters
        }
        else
        { // no light source
          if(b == 0) alb += m1.albedo; // accumulate directly visible albedo
          if(b == 1) { res.M = 0; res.f = 0.0; } // not visible after all so it seems, clear reservoir
        }



#if 0 // next event estimation to torch:
        irr += nee_torch(lpos, m1.x, rgb, m1.n, seed, rp);
#endif


#if 1
        // res = reservoir_decode(reservoir_encode(res), m1.x); // XXX debug decode/encode cycle
        // sample direction outgoing from m1.x according to the reservoir
        // use res.y as point to aim at, estimator is f(res.y)*res.W
        float a = global.frame <= 10 || s < params.spp/2 || res.f == 0.0 ? 1.0 : 0.0; // 0.2; // b == 0 ? 0.2 : 1.0;
        // if(global.frame > 10 && res.W > 0 && s > 0) // XXX rand.w > a)
        if(a < 1.0)
        {
          w = vmm_sample(res.kappa, rand.xy);
          vec3 mu = normalize(res.y-m1.x);
          vec3 up = vec3(1,0,0), du, dv;
          if(abs(mu.x) > abs(mu.y)) up = vec3(0,1,0);
          du = normalize(cross(up, mu));
